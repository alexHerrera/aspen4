

<body>
	
	<%= form_tag usuario_sessions_path, method: :post do %>	
		<div class="row">
			<div class="small-12 columns">
				
			  <div class="small-6 small-centered columns"> 
			  	<%= label_tag :usuario %>
				</div>
			  <div class="small-6 small-offset-1 small-centered columns">
			  	<%= text_field :username,value = nil, :placeholder => "Usuario",:class=> "input-xlarge"  %> 
			  </div>
			  
			  <div class="small-6 small-centered columns"> 
			  	<%= label_tag :Contraseña %>
			  </div>
			  <div class="small-6 small-offset-1 small-centered columns">
			  	<%= password_field_tag :password,value = nil, :placeholder => "Contraseña",:class=> "input-xlarge" %>  
			  </div>
			  
			  <div class="small-2 small-offset-8 columns">
				<%= submit_tag :'Log In', :class => " button success radius" %>
				
			  </div>

			  </div>
		</div
	<% end %>

</body>



	

